<?xml version="1.0" encoding="UTF-8"?>
<project name="PrintCloud" default="test" basedir="." description="a pdf cloud converter">
  <target name="test">
    <phpunit printsummary="true" haltonfailure="true" haltonerror="true" bootstrap="vendor/autoload.php" configuration="phpunit.xml" pharlocation="vendor/bin/phpunit">
      <formatter type="plain" usefile="false"/>
      <batchtest>
        <fileset dir="tests">
          <include name="*.php" />
        </fileset>
      </batchtest>
    </phpunit>
    <echo msg="este es el target de tests" />
  </target>

  <target name="prueba" depends="test">
    <composer command="install" />
  </target>
</project>